---
type Props = {
  className?: string;
};

const { className } = Astro.props as Props;
---

<div
  class:list={["burger-menu relative w-10 h-5 flex items-center", className]}
>
  <span class="burger-menu__line"></span>
</div>

<style lang="scss">
  .burger-menu {
    &::after,
    &::before,
    &__line {
      transition-duration: 0.3s;
      display: block;
      content: "";
      width: 100%;
      height: 3px;
      background-color: var(--gray);
    }

    &::after,
    &::before {
      position: absolute;
    }

    &::after {
      bottom: 0;
    }

    &::before {
      top: 1px;
    }
  }
</style>
